{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["DATABASE_URI", "PAYLOAD_SECRET"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["@workspace/docker#up"],
      "cache": false,
      "persistent": true
    },
    "up": {
      "cache": false
    },
    "down": {
      "cache": false
    },
    "logs": {
      "cache": false
    },
    "reset": {
      "cache": false
    }
  }
}
